{
  "compilerOptions": {
    "resolveJsonModule": true,
    "composite": true,
    "allowJs": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "declarationMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es6",
    "lib": ["es6", "dom"]
  },
  "exclude": ["./node_modules", "./dist", "./tests", "./cypress"]
}
