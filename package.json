{
  "private": true,
  "name": "restroom-mw",
  "repository": "https://github.com/dyne/restroom-mw",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "release": "npm whoami && lerna publish",
    "changelog": "mrcl",
    "clean": "lerna run clean",
    "lint": "lerna run lint",
    "lint:fix": "lerna run lint:fix",
    "test": "nyc ava",
    "build": "lerna run build --stream --concurrency=1 --include-dependencies",
    "doc": "lerna run doc"
  },
  "ava": {
    "failFast": true,
    "verbose": true,
    "babel": true,
    "require": [
      "@babel/register"
    ]
  },
  "nyc": {
    "reporter": [
      "lcovonly",
      "text"
    ],
    "branches": 80,
    "lines": 80,
    "functions": 80,
    "statements": 80,
    "check-coverage": true
  },
  "husky": {
    "hooks": {
      "commit-msg": "devmoji -e",
      "pre-commit": "yarn test"
    }
  },
  "devDependencies": {
    "@ava/babel": "^1.0.1",
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/plugin-proposal-optional-chaining": "^7.11.0",
    "@babel/plugin-transform-runtime": "^7.11.5",
    "@babel/preset-env": "^7.11.5",
    "@babel/register": "^7.12.1",
    "ava": "^3.13.0",
    "babel-core": "7.0.0-bridge.0",
    "cypress": "^5.4.0",
    "devmoji": "^2.1.10",
    "documentation": "^13.0.2",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.3.0",
    "lerna": "^3.22.1",
    "monorepo-changelog": "^0.1.0",
    "nyc": "^15.1.0",
    "prettier": "^2.1.2",
    "readdirp": "^3.4.0",
    "rimraf": "^3.0.2",
    "sinon": "^9.2.0",
    "start-server-and-test": "^1.11.4",
    "supertest": "^5.0.0"
  },
  "resolutions": {
    "babel-core": "^7.0.0-bridge.0"
  },
  "dependencies": {
    "zenroom": "^1.1.5"
  }
}
